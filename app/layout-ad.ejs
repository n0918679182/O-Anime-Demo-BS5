        <li><a class="text-white d-flex py-2 ps-13 ps-sm-0 justify-content-sm-center d-flex align-items-center" href="#"
            id="logout"><i class='bx bx-log-out me-3'></i>會員登出</a></li>
      </ul>
    </div>

    <!-- 搜尋 -->
    <div class="search-form w-100 bg-percent-80" id="search">
      <form class="container pb-4 d-flex justify-content-center">
        <input class="w-75 me-4" type="text" name="videoName">
        <button class="btn icon-hover" type="submit">
          <i class='bx bx-search fs-5' id="search-btn"></i>
