    <form class="bg-percent-80 rounded position-relative login-width">
      <i class='bx bx-x text-white close-btn icon-hover' id="close-btn" role="button"></i>
      <h2 class="text-white fs-1 mb-6">登入</h2>
      <input type="text" placeholder="請輸入帳號" class="w-100" />
      <p class="text-primary">查無此帳號</p>
      <input type="password" placeholder="請輸入密碼" class="w-100" />
      <p class="text-primary">密碼錯誤</p>
      <a class="w-100 btn btn-outline-primary mb-4" id="login-btn">登入</a>
      <div class="row">
        <div class="col-6">
          <a class="btn btn-outline-main-gray text-white w-100 mb-4" href="#">忘記密碼</a>
        </div>
        <div class="col-6">
